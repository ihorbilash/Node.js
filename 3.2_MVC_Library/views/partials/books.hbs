{{#if books}}

{{#each books}}
<div data-book-id="{{b_id}}" class="book_item col-xs-6 col-sm-3 col-md-2 col-lg-2">
    <div class="book">
        <a href="http://localhost:3000/book/{{b_id}}"><img src="{{link_image}}" alt="{{title}}">
            <div data-title="{{name}}" class="blockI" style="height: 46px;">
                <div data-book-title="{{title}}" class="title size_text">{{title}}</div>
                <div data-book-author="{{author}}" class="author">{{author}}</div>
            </div>
        </a>
        <a href="http://localhost:3000/book/{{b_id}}">
            <button type="button" class="details btn btn-success">Читать</button>
        </a>
    </div>
</div>
{{/each}}
{{else}}
<h1 class="text">на данный момент книги отсутствуют</h1>
{{/if}}
{{#if onebook}}


<div id="id">
    <div id="bookImg" class="col-xs-12 col-sm-3 col-md-3 item" style="    margin:;">
        <img src="{{onebook.link_image}}" alt="Responsive image" class="img-responsive">


    </div>
    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9 info">
        <div class="bookInfo col-md-12">
            <div id="title" class="titleBook">{{onebook.title}}</div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="bookLastInfo">
                <div class="bookRow"><span class="properties">автор:</span><span id="author">{{onebook.author}}</span>
                </div>
                <div class="bookRow"><span class="properties">год:</span><span id="year">{{onebook.year}}</span>
                </div>
                <div class="bookRow"><span class="properties">страниц:</span><span
                        id="pages">{{onebook.count_pages}}</span></div>
                <div class="bookRow"><span class="properties">isbn:</span><span id="isbn"></span></div>
            </div>
        </div>
        <div class="btnBlock col-xs-12 col-sm-12 col-md-12">
            <button type="button" class="btnBookID btn-lg btn btn-success" id="modalON">Хочу
                читать!</button>


            <!-- The Modal -->
            <div id="myModal" class="modal">
                <!-- Modal content -->
                <div class="modal-content">
                    <img src="/books-images/ok.jpg" alt="">
                    <h2>Отлично!</h2>
                    <h7>{{text}}</h7>
                    <button class="btnBookID btn-lg btn btn-success" id="clickOK">OK</button>
                </div>
            </div>

            <script>
                let modal = document.getElementById("myModal");
                let btnModalOn = document.getElementById("modalON");
                let btnModalOff = document.getElementById("clickOK");
                btnModalOn.onclick = function () { modal.style.display = "block"; }
                btnModalOff.onclick = function () {
                    modal.style.display = "none";
                    fetch(window.location.href, {
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        method: 'POST',
                        body: JSON.stringify({ countClick: true })
                    });
                }
                window.onclick = function (event) {
                    if (event.target == modal) { modal.style.display = "none"; }
                }
            </script>

        </div>
        <div class="bookDescription col-xs-12 col-sm-12 col-md-12 hidden-xs hidden-sm">
            <h4>О книге</h4>
            <hr>
            <p id="description">{{onebook.descr}}</p>
        </div>
    </div>
    <div class="bookDescription col-xs-12 col-sm-12 col-md-12 hidden-md hidden-lg">
        <h4>О книге</h4>
        <hr>
        <p class="description">{{onebook.descr}}</p>
    </div>
</div>

</div>
{{/if}}